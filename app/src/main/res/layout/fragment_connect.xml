<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/connect_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/connect_bkgrnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="248dp"
        android:layout_height="126dp"
        android:layout_marginTop="104dp"
        android:text="Если вам нужна помощь в работе с приложением обучающей платформы( регистрации, изменение данных, и др.), свяжитесь с нами по эл. почте"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="118dp"
        android:clickable="true"
        android:text="support@makers.kg"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/connect_back_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/connect_back_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect_back" />

    <TextView
        android:layout_width="248dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:text="Если вам нужна помощь в организации учебного процесса свяжитесь с нами по эл. почте"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/connect_back_two"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@id/connect_back_two"
        app:layout_constraintTop_toTopOf="@id/connect_back_two" />

    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="118dp"
        android:clickable="true"

        android:focusable="true"
        android:text="education@makers.kg"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/connect_back_two" />

    <Button
        android:id="@+id/connect_connect"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_blue"
        android:text="@string/connect"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/support"
        />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="440dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cardview_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/connect_bkgrnd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/name_connect"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:inputType="text"
                    app:layout_constraintTop_toTopOf="@id/cardview_connect"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/state_btn_change"
                    android:textColor="@drawable/text_btn_color"
                    android:textColorHint="@color/blue"
                    android:autofillHints="name"
                    android:fontFamily="sans-serif-medium"
                    android:hint="ФИО"
                    android:paddingStart="20sp"
                    android:paddingEnd="5dp"/>

                <EditText
                    android:id="@+id/connect_phone"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:inputType="phone"
                    android:autofillHints="phone"
                    android:hint="(+996)"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="20sp"
                    android:paddingEnd="5dp"
                    android:background="@drawable/state_btn_change"
                    android:textColor="@drawable/text_btn_color"
                    android:textColorHint="@color/blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_connect"
                    />

                <Button
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="70dp"
                    android:text="Отправить"
                    android:background="@drawable/button_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cardview_connect"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>